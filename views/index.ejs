  <option value="custom">Custom</option>
</select>




<input type="number" id="custom-angle" style="display:none;" min="0" max="360">
        </div>
         <div class="controls">
            <input type="range" id="opacity1" min="0" max="1" step="0.1" value="1">
<input type="range" id="opacity2" min="0" max="1" step="0.1" value="1">
<input type="range" id="opacity3" min="0" max="1" step="0.1" value="1">

         </div>

        

        <h2>Generated CSS Code:</h2>
        <textarea id="cssOutput" readonly></textarea>
        
    </div>
    <button onclick="copyToClipboard()" class="btn btn-info copy-css content-container blank-screen">Copy CSS</button>
    <div class="preview background-div" id="preview"></div>
   
    

    <script src="script.js"></script>
</body>
</html>
